<div class="container p-4">
    <div class="row">
        <div class="col-md-6 mx-auto">
            <div class="card ">
                <div class="card-body">
                    
                    <form action="/employees/edit/{{employees.idUsuario}}" method="POST">
                        <div class="form-group" style="text-align: center;">
                                <label style="font-size: 20px;">Editar un empleado existente</label>

                        </div>
                      
                        <div class="form-group">
                            <input type="text"  class="form-control" value="{{employees.nombres}}" name="nombres" placeholder="Nombres" autofocus>
                        </div>
                        <div class="form-group">
                            <input type="text" class="form-control" value="{{employees.apellidos}}" name="apellidos" placeholder="Apellidos" >
                        </div>
                        <div class="form-group">
                            <input type="text" class="form-control" value="{{employees.curp}}" name="curp" placeholder="CURP" >
                        </div>
                        
                        
                        <div class="form-group">
                            <input type="text"  value="{{employees.direccion}}" class="form-control" name="direccion" placeholder="Dirección" >
                        </div>
                        <div class="form-group">
                            <input type="text"  value="{{employees.telefono}}" class="form-control" name="telefono" placeholder="Telefóno" >
                        </div>
                        <div class="form-group">
                            <input type="text"  value="{{employees.correoElectronico}}" class="form-control" name="correoElectronico" placeholder="Correo Electrónico" >
                        </div>
                        <div class="form-group">
                            <input type="text"  value="{{employees.departamento}}" class="form-control" name="departamento" placeholder="Departamento" >
                        </div>
                       
                        <div class="form-group">
                            <button class="btn btn-success btn-block">
                                Guardar Empleado
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>